@model ContatoModel

@{
    ViewData["Title"] = "Apagar contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar este contato(@Model.Nome)?</h3> 
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Contato" asp-action="Index">Cancelar</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Contato" asp-action="ApagarConfirmacao" asp-route-id="Model.Id">Confirmar</a>